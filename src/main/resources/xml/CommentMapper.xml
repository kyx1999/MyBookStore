<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kyx1999.mybookstore.dao.CommentMapper">
    <resultMap id="BaseResultMap" type="com.kyx1999.mybookstore.model.Comment">
        <result column="uid" property="uid" jdbcType="INTEGER"/>
        <result column="bid" property="bid" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="time" property="time" jdbcType="TIMESTAMP"/>
    </resultMap>
    <insert id="insert" parameterType="com.kyx1999.mybookstore.model.Comment">
        insert into comment (uid, bid, content,
            time)
        values (#{uid,jdbcType=INTEGER}, #{bid,jdbcType=INTEGER}, #{content,jdbcType=VARCHAR},
            #{time,jdbcType=TIMESTAMP})
    </insert>
    <insert id="insertSelective" parameterType="com.kyx1999.mybookstore.model.Comment">
        insert into comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                uid,
            </if>
            <if test="bid != null">
                bid,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="time != null">
                time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                #{uid,jdbcType=INTEGER},
            </if>
            <if test="bid != null">
                #{bid,jdbcType=INTEGER},
            </if>
            <if test="content != null">
                #{content,jdbcType=VARCHAR},
            </if>
            <if test="time != null">
                #{time,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>
    <select id="selectByBookIdFromX" resultType="com.kyx1999.mybookstore.model.Comment">
        SELECT
            *
        FROM
            `Comment`
        WHERE
            `bid` = #{bid,jdbcType=INTEGER}
        ORDER BY `time` DESC
        LIMIT #{index,jdbcType=INTEGER} , 5
    </select>
    <select id="getCommentCountByBid" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT
            COUNT(*)
        FROM
            `Comment`
        WHERE `bid` = #{bid,jdbcType=INTEGER}
    </select>
</mapper>
